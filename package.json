{
	"name": "web3.js",
	"private": true,
	"version": "4.0.0",
	"description": "Ethereum API wrappers and utilities",
	"author": "ChainSafe Systems",
	"license": "LGPL-3.0",
	"keywords": [
		"ethereum",
		"eth",
		"web3",
		"web3js",
		"web3.js",
		"blockchain"
	],
	"homepage": "https://github.com/ChainSafe/web3.js#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ChainSafe/web3.js.git"
	},
	"bugs": {
		"url": "https://github.com/ChainSafe/web3.js/issues"
	},
	"engines": {
		"node": ">=12",
		"npm": ">=6.12.0"
	},
	"workspaces": {
		"packages": [
			"packages/*",
			"tools/*"
		]
	},
	"scripts": {
		"build": "yarn clean && lerna run build --stream",
		"clean": "lerna run clean",
		"ganache:start": ". ./scripts/ganache.sh start",
		"ganache:stop": "./scripts/ganache.sh stop",
		"geth:start": ". ./scripts/geth.sh start",
		"geth:stop": "./scripts/geth.sh stop",
		"lint": "lerna run lint --stream --parallel",
		"lint:fix": "lerna run lint:fix --stream --parallel",
		"format": "lerna run format --stream --parallel",
		"test": "lerna run test --stream --parallel",
		"test:unit": "lerna run test:unit --stream --parallel",
		"test:integration": "lerna run test:integration --stream --parallel",
		"test:integration:browsers": "./node_modules/.bin/karma start karma.config.js",
		"test:e2e:ganache:http": "export WEB3_SYSTEM_TEST_PROVIDER='http://localhost:8545'; yarn ganache:start && yarn test:integration && yarn ganache:stop",
		"test:e2e:ganache:ws": "export WEB3_SYSTEM_TEST_PROVIDER='ws://localhost:8545' yarn ganache:start && yarn test:integration && yarn ganache:stop",
		"test:e2e:geth:http": "export WEB3_SYSTEM_TEST_PROVIDER='http://localhost:8545' yarn geth:start && yarn test:integration && yarn geth:stop",
		"test:e2e:geth:ws": "export WEB3_SYSTEM_TEST_PROVIDER='ws://localhost:8545' yarn geth:start && yarn test:integration && yarn geth:stop",
		"test:e2e:browsers:http": "export WEB3_SYSTEM_TEST_PROVIDER='http://localhost:8545' yarn ganache:start && yarn test:integration:browsers && yarn ganache:stop",
		"test:e2e:browsers:ws": "export WEB3_SYSTEM_TEST_PROVIDER='ws://localhost:8545' yarn ganache:start && yarn test:integration:browsers && yarn ganache:stop",
		"prepare": "husky install",
		"postinstall": "yarn build"
	},
	"devDependencies": {
		"@types/node": "*",
		"assert": "^2.0.0",
		"browserify": "^17.0.0",
		"buffer": "^6.0.3",
		"bufferutil": "^4.0.6",
		"crypto-browserify": "^3.12.0",
		"eslint": "^8.3.0",
		"https-browserify": "^1.0.0",
		"husky": "^7.0.4",
		"jasmine": "^4.0.2",
		"jest": "^27.3.1",
		"karma": "^6.3.17",
		"karma-browserify": "^8.1.0",
		"karma-chrome-launcher": "^3.1.1",
		"karma-firefox-launcher": "^2.1.2",
		"karma-jasmine": "^4.0.1",
		"karma-webpack": "^5.0.0",
		"lerna": "^4.0.0",
		"lint-staged": "12.1.2",
		"prettier": "^2.4.1",
		"ts-jest": "^27.0.7",
		"ts-loader": "^9.2.8",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.2",
		"webpack": "^5.70.0",
		"@chainsafe/geth-dev-assistant": "0.1.11",
		"utf-8-validate": "^5.0.9",
		"watchify": "^4.0.0"
	},
	"packageManager": "yarn@1.22.15"
}
